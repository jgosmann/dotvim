" edit modes
inoremap jj <Esc>
inoremap jJ <Esc>

" fullscreen
nnoremap <D-CR> :set fullscreen!<CR>

" navigation
noremap j gj
noremap k gk

" windows
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l

" quickly edit vimrc
nmap <silent> <leader>ev :e $MYVIMRC<CR>

" format inner paragraph
nnoremap <leader>f gqip

